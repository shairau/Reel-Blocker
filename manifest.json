{
  "manifest_version": 3,
  "name": "Instagram Reels & Explore Blocker",
  "version": "1.0",
  "description": "Blocks Instagram Reels and Explore pages",
  "permissions": ["scripting"],
  "host_permissions": ["*://*.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
} 